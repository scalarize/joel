    ssl_dhparam /etc/letsencrypt/ssl-dhparams.pem; # managed by Certbot

}

server {
    if ($host = joel.scalarize.cn) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name joel.scalarize.cn;
    return 404; # managed by Certbot


}

server {
    if ($host = api.joel.scalarize.cn) {
        return 301 https://$host$request_uri;
    } # managed by Certbot


    listen 80;
    server_name api.joel.scalarize.cn;
    return 404; # managed by Certbot


}

server {
    if ($host = gd.scalarize.cn) {
        return 301 https://$host$request_uri;
