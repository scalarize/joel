        proxy_set_header X-Forwarded-Host api.joel.scalarize.cn;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
        proxy_set_header X-Forwarded-Proto $scheme;
        proxy_set_header Upgrade $http_upgrade;
        proxy_set_header Connection "upgrade";

        # 优化设置
        proxy_buffering off;
        proxy_read_timeout 300s;

        proxy_ssl_protocols TLSv1.2 TLSv1.3;
        proxy_ssl_ciphers ECDHE-RSA-AES128-GCM-SHA256:ECDHE-RSA-AES256-GCM-SHA384:ECDHE-RSA-CHACHA20-POLY1305;
        proxy_ssl_server_name on;
    }

    listen 443 ssl; # managed by Certbot
    ssl_certificate /etc/letsencrypt/live/api.joel.scalarize.cn/fullchain.pem; # managed by Certbot
    ssl_certificate_key /etc/letsencrypt/live/api.joel.scalarize.cn/privkey.pem; # managed by Certbot
