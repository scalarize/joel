{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "node",
		"lib": ["ES2022"],
		"types": ["node"],
		"typeRoots": ["../node_modules/@types", "../web/node_modules/@types"],
		"skipLibCheck": true,
		"strict": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"resolveJsonModule": true,
		"jsx": "react-jsx",
		"baseUrl": "..",
		"paths": {
			"../web/src/*": ["web/src/*"]
		},
		"moduleDetection": "force"
	},
	"include": ["*.ts"],
	"exclude": ["node_modules"]
}

